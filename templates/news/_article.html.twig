<article>
    <div class="d-flex align-items-center mb-3 text-muted small">
        {% if article.feed.url is same as 'https://feeds.feedburner.com/strangebuzz/en' %}
            <img src="{{ asset('build/images/news_aggregator/sources/strangebuzz.png') }}" alt="" width="50">
        {% endif %}
        {% if article.feed.url is same as 'https://feeds.feedburner.com/symfony/blog' %}
            <img src="{{ asset('build/images/news_aggregator/sources/symfony.png') }}" alt="" width="75">
        {% endif %}
        {% if article.feed.url is same as 'https://blog.sensiolabs.com/category/symfony/feed/' %}
            <img src="{{ asset('build/images/news_aggregator/sources/sensiolabs.svg') }}" alt="" width="75">
        {% endif %}
        {% if article.feed.url is same as 'https://feeds.feedburner.com/knpuniversity' %}
            <img src="{{ asset('build/images/news_aggregator/sources/symfonycasts-logo.svg') }}" alt="" width="100">
        {% endif %}

        <span class="ms-3">{{ article.feed.name }}</span>

        {% if article.publishedAt %}
            <span class="d-block ms-2 small">&#183;</span>

            <p class="post-metadata mb-0 ms-2">
                <span class="metadata" title="{{ article.publishedAt|format_datetime('long', 'long') }}">{{ article.publishedAt|ago }}</span>
            </p>
        {% endif %}
    </div>

    <h3 class="card-title">
        <a href="{{ path('news_article', {id: article.id}) }}" class="text-decoration-none text-reset">
            {{ article.title }}
        </a>
    </h3>

    <div class="card-text mt-3 mb-3">
        {{ article.description|sanitize_html(sanitizer = 'app.article_sanitizer')|u.truncate(180, '...', false)|raw }}
    </div>

    <a href="{{ path('news_article', {id: article.id}) }}">Continue reading</a>
</article>
