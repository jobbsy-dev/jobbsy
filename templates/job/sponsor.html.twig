{% extends 'base.html.twig' %}

{% block title %}Sponsor a Job | {{ parent() }}{% endblock %}

{% block post_job %}{% endblock %}

{% block main %}
    <div class="my-5">
        <div class="row mt-md-4 mt-0 align-items-center">
            <div class="col-12 col-md-5">
                {{ form_start(form) }}
                <h1 class="h2">Support open source ecosystem ðŸ’™</h1>
                <p>
                    By making a donation you will <b>support open source</b> and add your job offer at the <b>top of the list for 1 month!</b> <br>
