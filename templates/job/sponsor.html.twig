{% extends 'base.html.twig' %}

{% block title %}Sponsor a Job | {{ parent() }}{% endblock %}

{% block post_job %}{% endblock %}

{% block main %}
    <div class="my-5">
        <div class="row mt-md-4 mt-0 align-items-center">
            <div class="col-12 col-md-4">
                {{ form_start(form) }}
                <h1 class="h2">Support open source ecosystem ðŸ’™</h1>
                <p>
                    By making a donation you will <b>support open source</b> and add your job offer at the <b>top of the list for 6 months!</b> <br>
                    Each donation will sponsor Symfony open source ecosystem.<br>
                </p>
                <small>Any questions? <a href="mailto:hello@jobbsy.dev">Get in touch!</a></small>

                <div class="mt-4">
                    {{ form_widget(form.donationAmount) }}
                </div>
                <div class="d-grid mt-4">
                    <button class="btn btn-primary btn-lg bg-gradient px-3" type="submit">{{ 'action.sponsor'|trans }}</button>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-12 col-md-7 offset-1 d-none d-md-block">
