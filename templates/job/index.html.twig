{% extends 'base.html.twig' %}

{% block main %}
    <div class="px-4 pb-4 py-md-5 my-3 text-center">
        <h1 class="display-5 fw-bold">Symfony jobs</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">
                Find the best Symfony jobs, hire the best Symfony developers <br> and contribute to open source ðŸ’™
            </p>
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a href="{{ path('job_new') }}" class="btn btn-primary px-3 gap-3 bg-gradient">Contribute to open source</a>
                <a href="#getNotifiedAboutNewJobs" class="btn btn-outline-primary px-3 ">Get notified about new jobs <i class="fas fa-arrow-down ms-1"></i></a>
            </div>
        </div>
    </div>

    {% if jobs|length > 0 %}
        <div class="list-group mt-5">
            {% set jobsCount = jobs|length %}
            {% for job in jobs|slice(0, jobsCount/2) %}
                {{ include('job/_job.html.twig', {'job': job}) }}
            {% endfor %}

            <div class="my-3 my-md-4" id="getNotifiedAboutNewJobs">
                {{ render(controller('App\\Controller\\JobController::subscriptionForm')) }}
            </div>

            {% for job in jobs|slice(jobsCount/2, jobsCount) %}
                {{ include('job/_job.html.twig', {'job': job}) }}
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center">
            <p>No jobs</p>
            <a href="{{ path('job_new') }}" class="btn btn-outline-primary">{{ 'action.post_job'|trans }}</a>
        </div>
    {% endif %}
{% endblock %}
